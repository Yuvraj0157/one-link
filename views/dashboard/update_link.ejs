<!-- include header -->
<%-include('include/_header')%>
<!-- /include header -->

 <!-- Main Site -->
 <main id="site-main">
    <div class="container">
       <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/dashboard"><i class="fas fa-angle-double-left"></i> Dashboard</a>
           </div>
       </div>
        <div class="form-title text-center">
            <h2 class="text-dark" style="text-align: center;">Update Link</h2>
        </div>

        <form action="/dashboard/update-link" class="update_user" method="POST" id="update_link">
            <div class="new_user">
                <div class="form-group">
                    <label for="title" class="text-light">Title</label>
                    <input type="text" name="title" value="<%= link.title%>" placeholder="" required>
                </div>
                <div class="form-group">
                    <label for="url" class="text-light">URL</label>
                    <input type="text" name="url" value="<%= link.url%>" placeholder="http://.." required>
                </div>
                <input type="hidden" name="linkID" value="<%= link._id%>">
                <div class="form-group">
                    <button type="submit" class="btn text-dark update">Update</button>
                </div>
            </div>
        </form>
    </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%-include('include/_footer')%>
<!-- /include footer -->