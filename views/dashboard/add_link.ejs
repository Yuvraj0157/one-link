<!-- include header -->
<%-include('include/_header')%>
<!-- /include header -->

 <!-- Main Site -->
 <main id="site-main">
    <div class="container">
       <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/dashboard"><i class="fas fa-angle-double-left"></i> Dashboard</a>
           </div>
       </div>
        <div>
            <h2 class="text-dark" style="text-align: center;">New Link</h2>
            <p class="text-light" style="text-align: center;">Use the below form to create a new link</p>
        </div>
        <form action="/dashboard/add-link" method="POST" id="add_user">
            <div class="new_user">
                <div class="form-group">
                    <label for="title" class="text-light">Title</label>
                    <input type="text" name="title" value="" placeholder="" required>
                </div>
                <div class="form-group">
                    <label for="url" class="text-light">URL</label>
                    <input type="text" name="url" value="" placeholder="http://....." required>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn text-dark update">Add</button>
                </div>
            </div>
        </form>
    </div>
</main>
<!-- /Main Site -->


<!-- include footer -->
<%-include('include/_footer')%>
